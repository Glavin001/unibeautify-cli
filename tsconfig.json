{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}